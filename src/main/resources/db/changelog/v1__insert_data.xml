<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="01-insert-roles" author="alan">
        <insert tableName="roles">
            <column name="name" value="USER"/>
        </insert>
        <insert tableName="roles">
            <column name="name" value="REVIEWER"/>
        </insert>
        <insert tableName="roles">
            <column name="name" value="ADMIN"/>
        </insert>
        <insert tableName="roles">
            <column name="name" value="MENTOR"/>
        </insert>
    </changeSet>

    <changeSet id="02-insert-permissions" author="alan">
        <insert tableName="permissions">
            <column name="name" value="VIEW"/>
        </insert>
        <insert tableName="permissions">
            <column name="name" value="CREATE"/>
        </insert>
        <insert tableName="permissions">
            <column name="name" value="UPDATE"/>
        </insert>
        <insert tableName="permissions">
            <column name="name" value="ACCEPT"/>
        </insert>
        <insert tableName="permissions">
            <column name="name" value="REMOVE"/>
        </insert>
        <insert tableName="permissions">
            <column name="name" value="REPLY"/>
        </insert>
    </changeSet>

    <changeSet id="03-insert-role-permissions" author="alan">

        <!-- Role -->
        <insert tableName="roles_permissions">
            <column name="role_id"
                    valueComputed="(SELECT id FROM roles WHERE name = 'USER')"/>
            <column name="permission_id"
                    valueComputed="(SELECT id FROM permissions WHERE name = 'VIEW')"/>
        </insert>

        <insert tableName="roles_permissions">
            <column name="role_id"
                    valueComputed="(SELECT id FROM roles WHERE name = 'USER')"/>
            <column name="permission_id"
                    valueComputed="(SELECT id FROM permissions WHERE name = 'CREATE')"/>
        </insert>

        <insert tableName="roles_permissions">
            <column name="role_id"
                    valueComputed="(SELECT id FROM roles WHERE name = 'USER')"/>
            <column name="permission_id"
                    valueComputed="(SELECT id FROM permissions WHERE name = 'UPDATE')"/>
        </insert>

        <!-- REVIEWER -->
        <insert tableName="roles_permissions">
            <column name="role_id"
                    valueComputed="(SELECT id FROM roles WHERE name = 'REVIEWER')"/>
            <column name="permission_id"
                    valueComputed="(SELECT id FROM permissions WHERE name = 'VIEW')"/>
        </insert>

        <insert tableName="roles_permissions">
            <column name="role_id"
                    valueComputed="(SELECT id FROM roles WHERE name = 'REVIEWER')"/>
            <column name="permission_id"
                    valueComputed="(SELECT id FROM permissions WHERE name = 'ACCEPT')"/>
        </insert>

        <!-- MENTOR -->
        <insert tableName="roles_permissions">
            <column name="role_id"
                    valueComputed="(SELECT id FROM roles WHERE name = 'MENTOR')"/>
            <column name="permission_id"
                    valueComputed="(SELECT id FROM permissions WHERE name = 'VIEW')"/>
        </insert>

        <insert tableName="roles_permissions">
            <column name="role_id"
                    valueComputed="(SELECT id FROM roles WHERE name = 'MENTOR')"/>
            <column name="permission_id"
                    valueComputed="(SELECT id FROM permissions WHERE name = 'REPLY')"/>
        </insert>

        <insert tableName="roles_permissions">
            <column name="role_id"
                    valueComputed="(SELECT id FROM roles WHERE name = 'MENTOR')"/>
            <column name="permission_id"
                    valueComputed="(SELECT id FROM permissions WHERE name = 'ACCEPT')"/>
        </insert>

        <!-- ADMIN (ALL EXCEPT REPLY) -->
        <insert tableName="roles_permissions">
            <column name="role_id"
                    valueComputed="(SELECT id FROM roles WHERE name = 'ADMIN')"/>
            <column name="permission_id"
                    valueComputed="(SELECT id FROM permissions WHERE name = 'VIEW')"/>
        </insert>

        <insert tableName="roles_permissions">
            <column name="role_id"
                    valueComputed="(SELECT id FROM roles WHERE name = 'ADMIN')"/>
            <column name="permission_id"
                    valueComputed="(SELECT id FROM permissions WHERE name = 'CREATE')"/>
        </insert>

        <insert tableName="roles_permissions">
            <column name="role_id"
                    valueComputed="(SELECT id FROM roles WHERE name = 'ADMIN')"/>
            <column name="permission_id"
                    valueComputed="(SELECT id FROM permissions WHERE name = 'UPDATE')"/>
        </insert>

        <insert tableName="roles_permissions">
            <column name="role_id"
                    valueComputed="(SELECT id FROM roles WHERE name = 'ADMIN')"/>
            <column name="permission_id"
                    valueComputed="(SELECT id FROM permissions WHERE name = 'ACCEPT')"/>
        </insert>

        <insert tableName="roles_permissions">
            <column name="role_id"
                    valueComputed="(SELECT id FROM roles WHERE name = 'ADMIN')"/>
            <column name="permission_id"
                    valueComputed="(SELECT id FROM permissions WHERE name = 'REMOVE')"/>
        </insert>

    </changeSet>
</databaseChangeLog>
